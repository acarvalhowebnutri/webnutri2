<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/cadastrar"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical">


        <ImageView
            android:id="@+id/foto_objeto"
            android:layout_width="86.0dip"
            android:layout_height="86.0dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="0dip"
            android:src="@android:drawable/ic_menu_camera" />

    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_above="@+id/nomeEditText"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:id="@+id/nomeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignRight="@+id/cadastro_data_nasc" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop=".0dip"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignRight="@+id/emailEditText"
        android:layout_alignEnd="@+id/emailEditText">


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop="15.0dip"
        android:layout_above="@+id/emailEditText"
        android:layout_alignRight="@+id/cadastro_data_nasc"
        android:layout_alignEnd="@+id/cadastro_data_nasc">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_gravity="top" />


    </LinearLayout>

    <Button
        android:id="@+id/criarContaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="salvar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/criarContaBtn"
        android:layout_centerHorizontal="true">


    </LinearLayout>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cadastro_data_nasc"
        android:layout_alignEnd="@+id/cadastro_data_nasc" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/cadastro_data_nasc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/cadastro_peso"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numeric="integer" />

    <TextView
        android:id="@+id/cadastro_data_nasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe a data de Nascimento - Clique aqui"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/confirmarsenhaEditText"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginTop="32dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15.0dip"
        android:id="@+id/linearLayout10"
        android:weightSum="1"
        android:layout_below="@+id/cadastro_peso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:id="@+id/radioButtonMasc"
            android:layout_below="@+id/cadastro_peso"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feminino"
            android:id="@+id/radioButtonFem"
            android:layout_alignTop="@+id/radioButtonMasc"
            android:layout_toRightOf="@+id/radioButtonMasc"
            android:layout_toEndOf="@+id/radioButtonMasc"
            android:layout_alignParentStart="false" />
    </RadioGroup>

    <EditText
        android:id="@+id/senhaEditText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/confirmarsenhaEditText"
        android:layout_toLeftOf="@+id/confirmarsenhaEditText"
        android:password="true" />

    <EditText
        android:id="@+id/confirmarsenhaEditText"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:password="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Senha"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_alignStart="@+id/linearLayout5" />

</RelativeLayout>
