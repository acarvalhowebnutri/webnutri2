<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/cadastrar"
    android:orientation="vertical">





    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_above="@+id/linearLayout4"
        android:layout_alignEnd="@+id/emailEditText"
        android:layout_alignRight="@+id/emailEditText"
        android:orientation="horizontal"
        android:paddingTop=".0dip">


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


    </LinearLayout>


    <Button
        android:id="@+id/criarContaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout10"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/linearLayout5"
        android:layout_toRightOf="@+id/linearLayout5"
        android:text="salvar" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/criarContaBtn"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


    </LinearLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp"
        android:text="Peso" />

    <EditText
        android:id="@+id/cadastro_peso"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:inputType="textPersonName"
        android:numeric="integer" />

    <TextView
        android:id="@+id/cadastro_data_nasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cadastro_peso"
        android:layout_alignStart="@+id/cadastro_peso"
        android:layout_below="@+id/cadastro_peso"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:text="Informe a data de Nascimento - Clique aqui" />

    <RadioGroup
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cadastro_peso"
        android:layout_marginTop="97dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15.0dip"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/radioButtonMasc"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/cadastro_peso"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/radioButtonFem"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignTop="@+id/radioButtonMasc"
            android:layout_toEndOf="@+id/radioButtonMasc"
            android:layout_toRightOf="@+id/radioButtonMasc"
            android:text="Feminino" />
    </RadioGroup>










</RelativeLayout>
