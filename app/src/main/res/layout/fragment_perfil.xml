<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaPerfilActivity">


    <ImageView
        android:id="@+id/foto_objeto"
        android:layout_width="86.0dip"
        android:layout_height="86.0dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="0dip"
        android:src="@android:drawable/ic_menu_camera" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto_objeto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout7"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:layout_marginTop="23dp"
    android:layout_alignParentEnd="false"
    android:layout_above="@+id/btnAlterar">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewExibeNome"
        android:text="nome : "
        android:layout_weight="0.22" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:text="peso : "
        android:layout_weight="0.37" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:text="idade : "
        android:layout_weight="0.38" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="sexo :"
        android:layout_weight="0.29" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="Altura :" />
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:id="@+id/linearLayout2"
            android:weightSum="1"
            android:layout_alignTop="@+id/linearLayout7"
            android:layout_toRightOf="@+id/linearLayout7"
            android:layout_toEndOf="@+id/linearLayout7"
            android:layout_alignBottom="@+id/linearLayout7">

            <TextView
                android:id="@+id/textViewExibeNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="New Text"
                android:layout_weight="0.20" />

            <TextView
                android:id="@+id/textViewExibePeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textViewExibeIdade"
                android:layout_alignTop="@+id/textView7"
                android:text="New Text"
                android:layout_weight="0.26" />

            <TextView
            android:id="@+id/textViewExibeIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="New Text"
                android:layout_weight="0.30" />

            <TextView
                android:id="@+id/sexoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_weight="0.23" />

            <TextView
                android:id="@+id/alturaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text" />
        </LinearLayout>
        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alterar"
            android:layout_marginRight="46dp"
            android:layout_marginEnd="46dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="124dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout8"
            android:weightSum="1"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_alignBottom="@+id/linearLayout2">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewExibeNome"
                android:layout_weight="0.15" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView13"
                android:text="kg"
                android:layout_weight="0.24" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView11"
                android:text="anos"
                android:layout_weight="0.30" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView11" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
