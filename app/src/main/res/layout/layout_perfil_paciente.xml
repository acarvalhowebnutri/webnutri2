<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:baselineAligned="false">


        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_below="@+id/textViewTexto"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorAccent"
            android:visibility="visible">


            <ImageView
                android:id="@+id/foto_objeto"
                android:layout_width="126dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@android:drawable/ic_menu_camera" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/foto_objeto"
                android:orientation="vertical"
                tools:layout_conversion_absoluteHeight="82dp"
                tools:layout_conversion_absoluteWidth="44dp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewExibeNome"
                    android:text="Nome : "
                    android:textColor="@color/colorletras" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="10dp"
                    android:text="Peso : "
                    android:textColor="@color/colorletras" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="15dp"
                    android:text="Data Nasc."
                    android:textColor="@color/colorletras" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="15dp"
                    android:text="sexo :"
                    android:textColor="@color/colorletras" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="80dp"

                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewExibeNome"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"

                    android:text=" sem dados" />

                <TextView
                    android:id="@+id/textViewExibePeso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textViewExibeIdade"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_marginTop="09dp"
                    android:text=" sem dados" />

                <TextView
                    android:id="@+id/textViewExibeIdade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:text=" sem dados" />

                <TextView
                    android:id="@+id/sexoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text=" sem dados" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/foto_objeto"
                android:layout_alignRight="@+id/foto_objeto"
                android:layout_below="@+id/foto_objeto"
                android:layout_marginTop="26dp"
                android:layout_weight="0.24"
                android:text="kg" />

            <Button
                android:id="@+id/btnAlterar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="11dp"
                android:background="@color/colorPrimary"
                android:text="Alterar"
                android:textColor="#fff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/relativeLayout3"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="Dados Pessoais"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewTexto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout5"
            android:layout_alignLeft="@+id/relativeLayout5"
            android:layout_alignStart="@+id/relativeLayout5"
            android:text="Seu Nutricionista"
            android:textColor="@color/colorletras"
            android:visibility="visible" />

        <View
            android:id="@+id/textViewbarra1"

            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3"
            android:layout_below="@+id/textViewTexto"
            android:background="#2c6130" />

        <View
            android:id="@+id/textViewbarra2"

            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewTexto2"
            android:background="#2c6130" />

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/relativeLayout3">


            <TextView
                android:id="@+id/textView15"
                android:layout_width="86dp"
                android:layout_height="19dp"

                android:layout_alignBaseline="@+id/nomeNUtriTextView"
                android:layout_alignBottom="@+id/nomeNUtriTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Nutricionista :"
                android:textColor="@color/colorletras" />

            <TextView
                android:id="@+id/nomeNUtriTextView"
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_above="@+id/btnAlterarNutri"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text=" sem dados" />

            <Button
                android:id="@+id/btnAlterarNutri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorPrimary"
                android:text="escolher"
                android:textColor="#fff" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
